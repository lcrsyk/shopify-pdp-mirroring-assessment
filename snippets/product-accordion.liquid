<div class="accordion">
  {% for item in items %}
    <div class="accordion-item">
      <button id="accordion-button-2" aria-expanded="false">
        <span class="accordion-title">
          {% if icon == 'circle-check' %}
            {% render 'circle-check' %}
          {% endif %}
          {{ heading }}</span>
        <span class="icon" aria-hidden="true"></span>
      </button>
      <ul class="accordion-content">
        <p>{{ item }}</p>
      </ul>
    </div>
  {% endfor %}
</div>